!!!
%html{:lang => "en-GB"}
  %head
    %title jerseypropertyservices.com
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    =stylesheet_link_tag 'application'
    =javascript_include_tag 'application'

    =stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css'
    =javascript_include_tag '//netdna.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js'

    =stylesheet_link_tag '//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css'

    =stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.5.0/bootstrap-table.min.css'
    =javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.5.0/bootstrap-table.min.js'

  %body
    .container-fluid
      - if flash[:notice]
        #flash.row
          .span9.offset3.alert.alert-success
            = flash[:notice] # use jquery
          :javascript
            $(function(){
                $("#flash").fadeOut(2000);
            });
      .row
        =partial "layouts/navigation"
      .row
        .span9.offset3.site
          = yield
