!!!
%html{:lang => "en-GB"}
  %head
    %title jerseypropertyservices.com
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    =stylesheet_link_tag '/assets/application'
    =javascript_include_tag '/assets/application'

    =stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'
    =stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css'

    =javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js'

    =stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.5.0/bootstrap-table.min.css'
    =javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.5.0/bootstrap-table.min.js'

    =stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'

    =stylesheet_link_tag 'http://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.1/bootstrap-editable/css/bootstrap-editable.css'
    =javascript_include_tag 'http://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.1/bootstrap-editable/js/bootstrap-editable.min.js'

  %body
    .container
      - if flash[:notice]
        #flash.row
          .span9.offset3.alert.alert-success
            = flash[:notice] # use jquery
          :javascript
            $(function(){
                $("#flash").fadeOut(2000);
            });
      .row
        .span12.offset3
          %span#header jerseypropertyservices.com
        .row
          %nav#navigation
            .span2.offset4
              = link_to 'Home', url(:page, :home)
            .span2
              = link_to 'About', url(:page, :about)
            .span2
              = link_to 'Contact', url(:page, :contact)
            - if signed_in?
              .span2
                = link_to 'Logout', url(:sessions, :destroy)
              .span2
                = link_to 'Edit Profile', url(:users, :edit, id: session[:current_user])
            - else
              .span3
                = link_to 'Login', url(:sessions, :new)
              .span3
                = link_to 'Register', url(:users, :new)
        .row
          .span9.offset3.site
            = yield
