!!!
%html{:lang => "en-GB"}
  %head
    %title jerseypropertyservices.com
    =stylesheet_link_tag '/assets/application'
    =javascript_include_tag '/assets/application'
  %body
  .container
    .row
      .span12.offset3
        %span#header jerseypropertyservices.com
      .row
        %nav#navigation
          .span2.offset4
            = link_to 'Home', url_for(:page, :home)
          .span2
            = link_to 'About', url_for(:page, :about)
          .span2
            = link_to 'Contact', url_for(:page, :contact)
          - if signed_in?
            = link_to 'Logout', url_for(:sessions, :destroy)
          - else
            .span2
              = link_to 'Login', url_for(:sessions, :new)
      .row
        .span9.offset3.site
          = yield
