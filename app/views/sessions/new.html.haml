%h1 Login
= form_tag url(:sessions, :create) do # don't hard code route url :)
  = if error
    .alert.alert-error
      %h4 Error
      Your Email and/or Password is wrong!
  = label_tag :email
  = text_field_tag :email
  = label_tag :password
  = password_field_tag :password
  %p
    = submit_tag "Sign in", :class => "btn btn-primary"
%label.checkbox
  = check_box_tag :remember_me
  Remember me
%p
  = link_to 'forgotten password?', url(:forget_password, :new)
